<main id="user-index" class="page">
  <%# Home button start %>
  <div id="user-page">
    <div class="btn-container">
      <button class="btn">
        <%= link_to "Home", "../../"  %>
      </button>
    </div>
    <%# End fo Home button  %>
    <%# user info start %>
    <div class="user-container">
      <div class="user-profile-pic">
        <img src="<%= @user.photo %>" alt="profile-picture">
      </div>
      <div class="user-info">
        <h3><%= @user.name%></h3>
        <p class="posts-counter">Number of posts: <%= @user.posts_counter || 0 %></p>
      </div>
    </div>
    <article class="user-bio">
      <h3>Bio</h3>
      <div class="bio"><%= @user.bio %></div>
    </article>
    <%# end of user info %>
    <%# posts start %>
    <article>
      <% @posts.each do |post| %>
        <%= link_to  user_post_path(@user, post) do %>
          <div class="post-container">
            <h3 class="post-title"><%= post.title %></h3>
            <div class="post-details">
              <p class="details"><%= post.text[0..100]... %></p>
            </div>
            <div class="comment-like-container">
              <p class="coment-likes-data">
                Comment: <%= post.comment_counter || 0 %>, Likes: <%= post.likes_counter || 0 %>
              </p>
            </div>
          </div>
        <% end %>
      <% end %>
    </article>
    <%# end of post %>
    <%# see all post button %>
    <div class="btn-container">
      <button class="btn">
        <%= link_to "See all posts", user_posts_path(@user) %>
      </button>
    </div>
    <%# end of see all button %>
  </div>
</main>
