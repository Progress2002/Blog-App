<main id="posts" class="page">
  <%# Home button start %>
  <div id="user-page">
    <div class="btn-container">
        <%= link_to "Home", "../../"  %>
    </div>
    <%# End fo Home button  %>
    <%# user profile start %>
    <div class="user-container posts">
      <div class="user-profile-pic">
        <img src="<%= @user.photo %>" alt="profile-picture">
      </div>
      <div class="user-info">
        <h3><%= @user.name%></h3>
        <p class="posts-counter">Number of posts: <%= @user.posts_counter || 0 %></p>
      </div>
    </div>
    <%# End of user profile %>
    <article>
      <% @posts.each do |post| %>
        <%= link_to  user_post_path(@user, post) do %>
          <div class="post-containe">
            <h3 class="post-title"><%= post.title %></h3>
            <div class="post-details">
              <p class="details"><%= post.text[0..100]... %></p>
            </div>
            <div class="comment-like-container">
              <p class="coment-likes-data">
                Comment: <%= post.comment_counter || 0 %>, Likes: <%= post.likes_counter || 0 %>
              </p>
            </div>
          </div>
          <%# Post comments container start %>
          <ul class="post-comments-container">
            <% if post.recent_comments.any? %>
              <% post.recent_comments.each do |comment| %>
                <li>
                  <p><%= User.find_by(id: comment.user_id).name %>: <%= comment.text[0..60] %>...</p>
                </li>
              <% end %>
            <% else %>
              <li>No comments added yet.</li>
            <% end %>
          </ul>
          <%# End of Post comment container %>
        <% end %>
      <% end %>
    </article>
  </main>
