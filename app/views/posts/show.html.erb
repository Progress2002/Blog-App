                <p><%= User.find_by(id: comment.user_id).name %>: <%= comment.text %></p>
              </li>
            <% end %>
          <% else %>
            <p>No comments added yet.</p>
          <% end %>
        </ul>
        <%# End of Comments container  %>
      </div>
    </main>
