<main id="post-index" class="page">
  <div id="user-page">
    <%# Home button start %>
    <div class="btn-container">
      <%= link_to "Home", "../../../"  %>
    </div>
    <%# End fo Home button  %>
    <div class="single-post-container">
      <%# user post start %>
      <article class="post-article">
        <div class="info">
          <div>
            <h2 class="title"><%= @post.title %></h2>
            <p class="user-name">by <%= @user.name %></p>
          </div>
          <p class="posts-counter">
            Comment: <%= @post.comment_counter || 0 %>, Likes: <%= @post.likes_counter || 0 %>
          </div>
          <div class="post-body">
            <p><%= @post.text %></p>
          </div>
      </article>
        <%# End of user post %>
        <%# Comments container start %>
        <ul class="comments-container">
          <%= render_all_comment(@comments)%>
        </ul>
        <%# End of Comments container  %>
    </div>
  </div>
</main>
